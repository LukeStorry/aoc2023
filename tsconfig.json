{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "node16",
    "target": "es2022",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "outDir": "dist",
    "sourceMap": true,
    "strict": false,
    "incremental": true,

    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    "resolveJsonModule": true,
    "allowJs": true
  },
  "ts-node": {
    "files": true
  }
}
